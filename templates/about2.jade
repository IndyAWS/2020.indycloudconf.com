extends "base.jade"

block page_title
    |{{ this.title }} &mdash; {{super()}}

block body_class
    |about

block main
    section#the-conference
        .background(du-parallax, y="animator")
            .image.bg-cover(ff-bg="/static/backgrounds/fiber-optics.jpg")
        .overlay
        .main.vcontainer
            .inner
                .container
                    .row.fade-up(in-view)
                        .one-half.column
                            h2 {{ this. title }}
                            {{ this.body.html }}
                        .one-half.column
                            {{ this.body2.html }}
